{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@types/*": ["./@types/*"],
      "@core/*": ["./core/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@modules/*": ["./modules/*"],
      "@models/*": ["./models/*"],
      "@helpers/*": ["./helpers/*"],
      "@responses/*": ["./responses/*"],
      "@templates/*": ["./templates/*"],
      "@environments/*": ["./environments/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
